#!/usr/bin/env perl
use v5.18;

use FindBin;
use lib "$FindBin::Bin../lib";

use Iid::Index;
use Iid::PlackApp;

use Getopt::Std;

getopts("c:", \(my %opts));

$opts{d} ||= "/tmp/iid";        # a directory for storing index.

mkdir($opts{d}) unless -d "$opts{d}";

my $app = Iid::PlackApp->new( directory => $opts{d} )->plackapperize;
